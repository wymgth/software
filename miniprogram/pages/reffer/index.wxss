
.top {
  width: 750rpx;
  height: 191rpx;
  background: #5677fc;
  box-shadow: 0px 0px 7px 0px #5677fc;
  text-align: center;
  overflow: hidden;
}

.top view:nth-child(1) {
  height: 25rpx;
  line-height: 25rpx;
  margin-top: 48rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.top view:nth-child(2) {
  line-height: 32rpx;
  font-size: 50rpx;
  font-family: FZZhengHeiS-B-GB;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin-top: 34rpx;
}

.top view:nth-child(3) {
  width: 211rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(255, 255, 255, 1);
